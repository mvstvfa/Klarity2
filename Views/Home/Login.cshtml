@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<style>
    ::placeholder {
        color: white !important;
        opacity: 0.7;
    }
</style>

<section class="pt-5 pb-3 text-white" style="background-color: #000; min-height: 100vh;">
    <div class="container text-center" style="max-width: 500px;">
        <h1 class="fw-bold mb-4">Welcome Back</h1>

        @{
            var message = ViewBag.Message as string;
            var type = ViewBag.MessageType as string ?? "info";
            var showSuccessRedirect = type == "success";
        }

        @if (!string.IsNullOrEmpty(message))
        {
                <div class="alert alert-@type text-center" role="alert">
                @message
                </div>
        }

        @if (showSuccessRedirect)
        {
                <script>
                    setTimeout(() => {
                        window.location.href = "/";
                    }, 2500);
                </script>
        }

        <!-- Login Form -->
        <h5 class="text-start mb-3">Login</h5>
        <form asp-controller="Account" asp-action="Login" method="post">
            <input type="email" name="email" class="form-control bg-dark text-white mb-2" placeholder="Email address" required />
            <input type="password" name="password" class="form-control bg-dark text-white mb-3" placeholder="Password" required />
            <button type="submit" class="btn btn-outline-light w-100">Log In</button>
        </form>

        <!-- OR Divider -->
        <div class="my-4 position-relative">
            <hr class="text-secondary" />
            <span class="position-absolute top-50 start-50 translate-middle bg-black px-3">OR</span>
        </div>

        <!-- Sign Up Form -->
        <h5 class="text-start mb-3">Sign Up</h5>
        <form asp-controller="Account" asp-action="Register" method="post">
            <input type="text" name="fullName" class="form-control bg-dark text-white mb-2" placeholder="Full Name" required />
            <input type="email" name="email" class="form-control bg-dark text-white mb-2" placeholder="Email address" required />
            <input type="password" name="password" class="form-control bg-dark text-white mb-3" placeholder="Create Password" required />
            <button type="submit" class="btn btn-outline-light w-100">Sign Up</button>
        </form>
    </div>
</section>
